@using ServiceStudents.DTO

@model StudentUpdateRequest

<form asp-action="Edit" asp-controller="Home" method="post">

    <div class="form-group">
        <input type="hidden" asp-for="ID"/>
    </div>
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Dept">Department</label>
        <input type="text" class="form-control" asp-for="Dept">
        <span asp-validation-for="Dept"></span>
    </div>


    <button type="submit" class="btn btn-primary">Submit</button>

</form>